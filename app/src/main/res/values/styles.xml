<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <style name="EstabelecimentoOpcoes">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_silver</item>
    </style>

    <style name="FilterLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="AppEditText">
        <item name="android:background">@drawable/edittext_rounded_corners</item>
        <item name="android:textColorHint">@color/medium_silver</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppLayoutMensagem">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppInfoText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppCardReservaText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonSave">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonCancel">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonVerHorarios">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MensagemProcessamento">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MensagemProcessamentoErro">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
